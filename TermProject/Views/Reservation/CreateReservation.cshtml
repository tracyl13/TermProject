@{
    Layout = null;
}

<html>
    <head>
        <title>Create Reservation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .navbar {
            background-color: #493939;
            font-family: serif;
            letter-spacing: 0.1rem;
            color: white;
            padding: 0.5rem;
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: white;
            }

            .navbar nav-item, .navbar .nav-link {
                color: white;
            }

                .navbar .nav-link:hover {
                    color: lightblue;
                }

    </style>
    </head>

    <body>

    <nav class="navbar navbar-expand">
        <div class="container-fluid">
            <a class="navbar-brand fs-3" id="brandName">Vyrn Review</a>
            <ul class="navbar-nav" id="navLinks" runat="server">
                <li class="nav-item">
                    <a href="/Main/Main" class="nav-link fs-5">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/Account/Login" class="nav-link fs-5">Login</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h2>Book Your Table</h2>
        <p>All fields must be filled. An email will be sent to you when the restaurant confirms, modifies, or deletes it</p>

        @model Reservation

        <div class="card-container">
            <div class="card-content">
                <form asp-controller="Reservation" asp-action="CreateReservationSubmit" method="POST">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <h3>Identification</h3>
                    <div class="form-row mb-3">
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName">First Name:</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="LastName">Last Name:</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <h3>Contact Information</h3>
                    <div class="form-row mb-3">
                        <div class="form-group col-md-6">
                            <label asp-for="PhoneNumber">Phone Number:</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Email">Email:</label>
                            <input asp-for="Email" class="form-control"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <h3>Reservation Details</h3>
                    <div class="form-row mb-3">
                        <div class="form-group col-md-6">
                            <label asp-for="Date">Date:</label>
                            <input asp-for="Date" class="form-control" type="date" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Time">Time:</label>
                            <input asp-for="Time" class="form-control" type="time" />
                            <span asp-validation-for="Time" class="text-danger"></span>
                        </div>
                    </div>

                    <h3>Additional Information</h3>
                    <div class="form-row mb-3">
                        <div class="form-group col-md-6">
                            <label asp-for="PartySize">Party Size:</label>
                            <input asp-for="PartySize" class="form-control" />
                            <span asp-validation-for="PartySize" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="SpecialRequest">Special Requests:</label>
                            <textarea asp-for="SpecialRequest" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="SpecialRequest" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

                <label>@ViewBag.Status</label>
            </div>
        </div>
    </div>
    </body>
</html>
