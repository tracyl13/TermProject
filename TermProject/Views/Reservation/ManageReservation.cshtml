@{
    Layout = null;
}


<html>
    <head>
        <title>Manage Reservation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .navbar {
            background-color: #493939;
            font-family: serif;
            letter-spacing: 0.1rem;
            color: white;
            padding: 0.5rem;
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: white;
            }

            .navbar nav-item, .navbar .nav-link {
                color: white;
            }

                .navbar .nav-link:hover {
                    color: lightblue;
                }

    </style>
    </head>

    <body>

    <nav class="navbar navbar-expand">
        <div class="container-fluid">
            <a class="navbar-brand fs-3" id="brandName">Vyrn Review</a>
            <ul class="navbar-nav" id="navLinks" runat="server">
                <li class="nav-item">
                    <a href="/Main/Main" class="nav-link fs-5">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/Account/Login" class="nav-link fs-5">Login</a>
                </li>
            </ul>
        </div>
    </nav>

    

    <h2>Manage Reservations</h2>
    <p>Press the corresponding button to confirm, modify, or delete a reservation</p>

    <div class="row justify-content-center mt-4">
        <div class="col-md-10">
            <table class="table table-bordered gridview-stype">
                <thead>
                    <tr>
                        <th>ReservationID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Party Size</th>
                        <th>Special Request</th>
                        <th>Confirm</th>
                        <th>Modify</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model)
                    {
                        <tr>
                            <td>@reservation.ReservationID</td>
                            <td>@reservation.FirstName</td>
                            <td>@reservation.LastName</td>
                            <td>@reservation.PhoneNumber</td>
                            <td>@reservation.Email</td>
                            <td>@reservation.Date.ToString("d")</td>
                            <td>@reservation.Time</td>
                            <td>@reservation.PartySize</td>
                            <td>@reservation.SpecialRequest</td>
                            <td>
                                <a asp-controller="Reservation" asp-action="ConfirmReservation" asp-route-index="@Model.IndexOf(reservation)" class="btn btn-success">Confirm</a>
                            </td>
                            <td>
                                <a asp-controller="Reservation" asp-action="ModifyReservation" asp-route-id="@reservation.ReservationID" class="btn btn-info">Modify</a>
                            </td>
                            <td>
                                <a asp-controller="Reservation" asp-action="DeleteReservation" asp-route-ReservationID="@reservation.ReservationID" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
  
    <label id="lblTesting">@ViewBag.TestingMessage</label>
    <label id="lblDelete">@ViewBag.DeleteMessage</label>

    </body>
</html>