@{
    Layout = null;
}


<html>
    <head>
        <title>Create Review</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .navbar {
            background-color: #493939;
            font-family: serif;
            letter-spacing: 0.1rem;
            color: white;
            padding: 0.5rem;
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: white;
            }

            .navbar nav-item, .navbar .nav-link {
                color: white;
            }

                .navbar .nav-link:hover {
                    color: lightblue;
                }

    </style>
    </head>

    <body>

    <nav class="navbar navbar-expand">
        <div class="container-fluid">
            <a class="navbar-brand fs-3" id="brandName">Vyrn Review</a>
            <ul class="navbar-nav" id="navLinks" runat="server">
                <li class="nav-item">
                    <a href="/Main/Main" class="nav-link fs-5">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/Account/Login" class="nav-link fs-5">Login</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
    <h2>Create Review</h2>
    <p>All fields must be filled</p>

    @model Reviews

        <div class="card-container">
            <div class="card-content">
        <form asp-controller="Review" asp-action="CreateReviewSubmit" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <h3>Date Of Visit</h3>
                    <div class="form-row mb-3">
                        <div class="form-group col-md-6">
                            <label asp-for="Date">Date:</label>
                            <input asp-for="Date" class="form-control" type="date" required />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Time">Time:</label>
                            <input asp-for="Time" class="form-control" type="time" required />
                            <span asp-validation-for="Time" class="text-danger"></span>
                        </div>
                    </div>

                    <h3>Ratings</h3>
                    <div class="form-row mb-3">
                        <div class="form-group col-md-3">
                            <label asp-for="FoodQuality">Food Quality:</label>
                            <select asp-for="FoodQuality" class="form-control" required>
                                <option value="">Select an option</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                            <span asp-validation-for="FoodQuality" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-3">
                            <label asp-for="Service">Service:</label>
                            <select asp-for="Service" class="form-control" required>
                                <option value="">Select an option</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                            <span asp-validation-for="Service" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Atmosphere">Atmosphere:</label>
                            <select asp-for="Atmosphere" class="form-control" required>
                                <option value="">Select an option</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                            <span asp-validation-for="Atmosphere" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Price">Price Level:</label>
                            <select asp-for="Price" class="form-control" required>
                                <option value="">Select an option</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <h3>Comments</h3>
                    <div class="form-row mb-3">
                        <div class="form-group col-12">
                            <textarea asp-for="Comment" class="form-control" rows="5" required></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                

            <label id="lblTesting">This is here for testing purposes</label>
        </form>
            </div>
        </div>
    </div>

    </body>
</html>