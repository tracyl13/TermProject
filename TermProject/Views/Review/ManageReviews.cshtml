@{
    Layout = null;
}

<html>
    <head>
        <title>Manage Reviews</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .navbar {
            background-color: #493939;
            font-family: serif;
            letter-spacing: 0.1rem;
            color: white;
            padding: 0.5rem;
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: white;
            }

            .navbar nav-item, .navbar .nav-link {
                color: white;
            }

                .navbar .nav-link:hover {
                    color: lightblue;
                }

    </style>
    </head>


    <body>

    <nav class="navbar navbar-expand">
        <div class="container-fluid">
            <a class="navbar-brand fs-3" id="brandName">Vyrn Review</a>
            <ul class="navbar-nav" id="navLinks" runat="server">
                <li class="nav-item">
                    <a href="/Main/Main" class="nav-link fs-5">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/Account/Login" class="nav-link fs-5">Login</a>
                </li>
            </ul>
        </div>
    </nav>

    <h2>Manage Reviews</h2>
    <p>Select a review to modify, or delete. To see the comments of a review click the modify button of the associated review.</p>

    <div class="row justify-content-center mt-4">
        <div class="col-md-10">
            <table class="table table-bordered gridview-style">
                <thead>
                    <tr>
                        <th>Review ID</th>
                        <th>Restaurant ID</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Food Quality</th>
                        <th>Service</th>
                        <th>Atmosphere</th>
                        <th>Price</th>
                        <th>Modify</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reviews in Model)
                    {
                        <tr>
                            <td>@reviews.ReviewID</td>
                            <td>@reviews.RestaurantID</td>
                            <td>@reviews.Date.ToShortDateString()</td>
                            <td>@reviews.Time</td>
                            <td>@reviews.FoodQuality</td>
                            <td>@reviews.Service</td>
                            <td>@reviews.Atmosphere</td>
                            <td>@reviews.Price</td>
                            <td>
                                <a asp-controller="Review" asp-action="ModifyReview" asp-route-id="@reviews.ReviewID" class="btn btn-primary">Modify</a>
                            </td>
                            <td>
                                <a asp-controller="Review" asp-action="DeleteReview" asp-route-ReviewID="@reviews.ReviewID" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <label id="lblTesting">@ViewBag.TestingMessage</label>
    <label id="lblDelete">@ViewBag.DeleteMessage</label>

    </body>
</html>
